<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritePost">

    <TextView
        android:id="@+id/title_write_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="자유 게시판"
        android:layout_margin="10dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subTitle"
        android:layout_centerHorizontal="true"
        android:text="Space for writing post."
        android:layout_below="@+id/title_write_board"
        android:textColor="#000000"
        android:textSize="20sp"
        />
    <LinearLayout
        android:id="@+id/space_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subTitle"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/write_title"
            android:hint="제목"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/write_writer"
            android:hint="글쓴이"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/write_content"
            android:hint="내용"
            android:gravity="top"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/write_button_ok_sign"
        android:layout_below="@+id/space_write"
        android:layout_centerHorizontal="true"
        android:text="글 작성"
        android:layout_marginTop="10dp"
        />



</RelativeLayout>